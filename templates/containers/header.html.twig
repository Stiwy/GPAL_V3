<header>
    <div class="row justify-content-around p-2">
        <div class="col-12 col-md-4 text-center">
            <a href="{{ path('home') }}" class="text-white h5">
                <img src="{{ asset('assets/img/palette.png') }}" alt="Logo GPAL" class="logo-header">
                <span class="d-none d-md-inline">GESTION DES PALETTES</span>
            </a>
        </div>
        <div class="col-12 col-md-4">
            {% if app.user %}
            <form class="d-flex" methods="GET" action="{{ path('search') }}">
                <input class="form-control" name="search" type="search" placeholder="Rechercher..." aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Chercher</button>
            </form>
            {% endif %}
        </div>
    </div>
    
    {% if app.user %}
        <nav class="bg-light-custom row">
            <a href="{{ path('home') }}" class="col-3 text-center border border-top-0 border-secondary py-2">
                <img src="{{ asset('assets/svg/home.svg') }}" alt="Accueil">
            </a>
            <a onclick="history.go(-1)" class="col-3 text-center border border-top-0 border-secondary py-2">
                <img src="{{ asset('assets/svg/return.svg') }}" alt="Retour">
            </a>
            <a data-bs-toggle="modal" data-bs-target="#addPaletteModal" class="col-3 text-center border border-top-0 border-secondary py-2">
                <img src="{{ asset('assets/svg/plus.svg') }}" alt="Ajouter">
            </a>
            <a href="{{ path('app_logout') }}" class="col-3 text-center border border-top-0 border-secondary py-2">
                <img src="{{ asset('assets/svg/logout.svg') }}" alt="Deconnexion">
            </a>
        </nav>
    {% endif %}
</header>